    </Style>

    <DataTemplate x:Key="CommandButtonTemplate" DataType="{x:Type mvvm:CommandItem}">
        <Border x:Name="ctrBorder"
                    BorderBrush="Transparent"
                    BorderThickness="1"
                    Padding="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0"
                           x:Name="ctrIcon"
                           Source="{Binding Image}"
                           Width="16"
                           Height="16" />
                <TextBlock Grid.Column="1"
                               Text="{Binding Caption}"
                               Margin="5,0" />
                <ed:Arc Grid.Column="0"
                            x:Name="ctrBusy"
                            ArcThicknessUnit="Pixel"
                            EndAngle="360"
                            Width="16"
                            Height="16"
                            Stretch="None"
                            Stroke="Black"
                            StartAngle="0"
                            ArcThickness="4"
                            StrokeThickness="0"
                            RenderTransformOrigin="0.5,0.5"
                            Visibility="Collapsed">
                    <ed:Arc.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform />
                            <TranslateTransform />
                        </TransformGroup>
                    </ed:Arc.RenderTransform>
                    <ed:Arc.Fill>
                        <LinearGradientBrush EndPoint="0.5,0"
                                                 MappingMode="RelativeToBoundingBox"
                                                 StartPoint="0.5,0.5">
                            <GradientStop Color="#FFF50C8C"
                                              Offset="0" />
                            <GradientStop Color="#FF1116EB"
                                              Offset="1" />
                        </LinearGradientBrush>
                    </ed:Arc.Fill>
                </ed:Arc>
            </Grid>
        </Border>
        <DataTemplate.Triggers>
            <!--鼠标移入移出-->
            <Trigger Property="IsMouseOver"
                         Value="True">
                <Setter Property="BorderBrush"
                            TargetName="ctrBorder"
                            Value="WhiteSmoke" />
                <Setter Property="Background"
                            TargetName="ctrBorder"
                            Value="#881116EB" />
            </Trigger>
            <Trigger Property="IsMouseOver"
                         Value="False">
                <Setter Property="BorderBrush"
                            TargetName="ctrBorder"
                            Value="Transparent" />
                <Setter Property="Background"
                            TargetName="ctrBorder"
                            Value="Transparent" />
            </Trigger>
            <DataTrigger Binding="{Binding Command.IsBusy}"
                             Value="True">
                <Setter Property="Visibility"
                            TargetName="ctrIcon"
                            Value="Collapsed" />
                <Setter Property="Visibility"
                            TargetName="ctrBusy"
                            Value="Visible" />
                <DataTrigger.EnterActions>
                    <BeginStoryboard x:Name="_beginStoryboard1">
                        <Storyboard>
                            <DoubleAnimationUsingKeyFrames
                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                                    Storyboard.TargetName="ctrBusy"
                                    RepeatBehavior="Forever">
                                <EasingDoubleKeyFrame KeyTime="0:0:0.1"
                                                          Value="30" />
                                <EasingDoubleKeyFrame KeyTime="0:0:0.2"
                                                          Value="60" />
                                <EasingDoubleKeyFrame KeyTime="0:0:0.3"
                                                          Value="90" />
                                <EasingDoubleKeyFrame KeyTime="0:0:0.4"
                                                          Value="120" />
                                <EasingDoubleKeyFrame KeyTime="0:0:0.5"
                                                          Value="150" />
                                <EasingDoubleKeyFrame KeyTime="0:0:0.6"
                                                          Value="180" />
                                <EasingDoubleKeyFrame KeyTime="0:0:0.7"
                                                          Value="210" />
                                <EasingDoubleKeyFrame KeyTime="0:0:0.8"
                                                          Value="240" />
                                <EasingDoubleKeyFrame KeyTime="0:0:0.9"
                                                          Value="270" />
                                <EasingDoubleKeyFrame KeyTime="0:0:1.0"
                                                          Value="300" />
                                <EasingDoubleKeyFrame KeyTime="0:0:1.1"
                                                          Value="330" />
                                <EasingDoubleKeyFrame KeyTime="0:0:1.2"
                                                          Value="360" />
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </DataTrigger.EnterActions>
                <DataTrigger.ExitActions>
                    <StopStoryboard BeginStoryboardName="_beginStoryboard1" />
                </DataTrigger.ExitActions>
            </DataTrigger>
            <DataTrigger Binding="{Binding Command.IsBusy}"
                             Value="False">
                <Setter Property="Visibility"
                            TargetName="ctrIcon"
                            Value="Visible" />
                <Setter Property="Visibility"
                            TargetName="ctrBusy"
                            Value="Collapsed" />
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>
