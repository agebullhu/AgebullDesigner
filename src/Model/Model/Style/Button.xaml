    <Style x:Key="FontAwesome" >
        <Setter Property="TextElement.FontFamily" Value="/Agebull.Common.Mvvm;component/WebFont/fonts/#FontAwesome" />
    </Style>

    <mvvm:BoolToVisibleConverter x:Key="BoolToVisibleConverter" />
