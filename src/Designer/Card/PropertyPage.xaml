<UserControl x:Class="Agebull.Common.Designer.View.PropertyPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:simpleDesign="clr-namespace:Agebull.Common.SimpleDesign"
             xmlns:designer="clr-namespace:Agebull.Common.Designer"
             xmlns:card="clr-namespace:Agebull.Common.Designer.Card"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <TabControl TabStripPlacement="Top">
        <TabControl.Items>
            <TabItem Header="基本">
                <card:ConfigForm/>
            </TabItem>
            <TabItem Header="扩展属性">
                <designer:ExtendPanel />
            </TabItem>
            <TabItem Header="属性表格">
                <simpleDesign:PropertyPanel />
            </TabItem>
        </TabControl.Items>
    </TabControl>
</UserControl>
